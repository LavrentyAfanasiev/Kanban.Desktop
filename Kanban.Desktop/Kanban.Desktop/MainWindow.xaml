<Window x:Class="Kanban.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:kanbancontrol="clr-namespace:Ui.Wpf.KanbanControl;assembly=Ui.Wpf.KanbanControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <LinearGradientBrush x:Key="Gr" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0" />
            <GradientStop Color="WhiteSmoke" Offset="0.4" />
        </LinearGradientBrush>
        
        <DataTemplate x:Key="Card">
            <Border 
                Margin="3"
                BorderBrush="Silver"
                Background="{StaticResource Gr}"
                BorderThickness="1,1,1,1" 
                CornerRadius="4">
                <Grid Margin="3" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="12,0" Text="Status:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Status}"/>                        
                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="12,0" Text="State:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding State}"/>
                </Grid>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="hHead">
            <Border 
                Margin="3"
                Background="Beige"
                CornerRadius="4">
                <TextBlock Margin="12" Text="{Binding Caption}"/>
            </Border>
        </DataTemplate>        
        <DataTemplate x:Key="vHead">
            <Border 
                Margin="3"
                Background="Beige"
                CornerRadius="4">
                <TextBlock 
                    Margin="12" 
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5"
                    Text="{Binding Caption}">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="270"/>
                    </TextBlock.RenderTransform>                    
                </TextBlock>
            </Border>
        </DataTemplate>        
    </Window.Resources>
    <Grid>
        <kanbancontrol:Kanban 
            VerticalDimension = "{Binding VerticalDimension}"
            HorizontalDimension = "{Binding HorizontalDimension}"
            CardItems = "{Binding Tickets}"

            HorizontalHeaderTemplate="{StaticResource hHead}"
            VerticalHeaderTemplate="{StaticResource vHead}"
            CardItemTemplate = "{StaticResource Card}"/>
    </Grid>
</Window>
