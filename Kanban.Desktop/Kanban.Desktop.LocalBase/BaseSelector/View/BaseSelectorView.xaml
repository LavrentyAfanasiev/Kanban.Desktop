<Controls:MetroWindow  x:Class="Kanban.Desktop.LocalBase.BaseSelector.View.BaseSelectorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban.Desktop.LocalBase.BaseSelector.View"
       
        mc:Ignorable="d"
      Title="Выбор базы данных" Height="100" Width="550" ShowMinButton="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="14" Margin="5" HorizontalAlignment="Stretch" TextAlignment="Center">
            Выберите существующую базу или введите название новой для начала работы:
        </TextBlock>
        <ComboBox HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"     
         Width="450" Height="50"
         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"      
         DisplayMemberPath="Title" IsEditable="True" 
                  Grid.Row="1"/>
    </Grid>
</Controls:MetroWindow>
